
﻿@using X.PagedList.Mvc.Core
@model X.PagedList.IPagedList<DAPM.ViewModels.HangHoaViewModel>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers


@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Danh Sách Hàng Ủng Hộ</title>
    <link rel="stylesheet" href="~/css/styles.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" integrity="sha512-SnH5WK+bZxgPHs44uWIX+LLJAJ9/2PkPKZ5QiAj6Ta86w+fsb2TkcmfRyVX3pBnMFcV7oQPJkl9QevSCWr3W6A==" crossorigin="anonymous" referrerpolicy="no-referrer" />
</head>
<body>
    <div class="container">
        <aside class="sidebar">
            <div class="logo">
                <img src="@Url.Content("~/img/logo.jpeg")" alt="Logo">
                <h1>HUYỆN HÒA VANG</h1>
            </div>
            <hr />
            <nav>
                <ul>
                    <li><a href="#">Cập nhật tài khoản</a></li>
                    <li><a href="#">Cập nhật Đợt lũ</a></li>
                    <li><a href="#">Cập nhật Danh mục</a></li>
                    <li><a href="#">Cập nhật ủng hộ</a></li>
                    <li><a href="#">Cập nhật thiệt hại</a></li>
                    <li><a href="#">Cập nhật cứu trợ</a></li>

                    <ul>
                        <li><a href="#">Danh sách đăng ký</a></li>
                        <li><a href="#">Hàng hóa ủng hộ</a></li>
                    </ul>
              
                    <li><a href="#">Thống kê & báo cáo</a></li>
                </ul>
            </nav>
        </aside>
        <main class="main-content">
            <header>
                <div class="search-bar">
                    <input type="text" placeholder="Search">
                </div>
                <div class="user-info">
                    <i class="fa-regular fa-user" style="margin-right: 10px"></i>
                    <span>Admin</span>
                    <i class="fa-regular fa-bell"></i>
                </div>
            </header>
            <hr />
            <section class="content">
                <div class="box-title-page">
                    <h1>DANH SÁCH HÀNG ỦNG HỘ</h1>
                </div>
                <div class="alert-danger" style="color: red">@TempData["Message"]</div>

                <div class="box-add-btn" >
                    <button class="add-button" style="right: 0; background-color:  #32CD32"> <a style="text-decoration: none ; color: white; height: 100%; width: 100%" href="/Product/AddProduct">Thêm</a> </button>
                    </div>
                <table style="overflow: auto;">
                    <thead>
                        <tr>
                            <th>STT</th>
                            <th>Danh mục</th>
                            <th>Tên hàng hóa</th>
                            <th>Số lượng</th>
                            <th>Mô tả</th>
                            <th>Đơn vị tính</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            var stt = 0;
                        }
                        @foreach(var item in Model)
                        {
                            stt++;
                            <tr>
                                <td>@stt</td>
                                <td>@item.TenDanhMuc</td>
                                <td>@item.TenHangHoa</td>
                                <td>@item.SoLuong</td>
                                <td>@item.MoTa</td>
                                <td>@item.DonViTinh</td>
                                <td>
                                    <a class="add-button" style="background-color: #007FFF; text-decoration: none" href="/Product/EditProduct?id=@item.IdHangHoa">Sửa</a>
                                    <a class="delete-button-a" style="background-color: #FF0000  ; text-decoration: none; padding: 10px 20px;border: none;border-radius: 10px;    border: none;transition: background-color 0.3s ease; color: white" href="/Product/DeleteProduct?id=@item.IdHangHoa">Delete</a>
                                </td>
                            </tr>
                        }

                    </tbody>
                </table>
                <div class="pagination" style="margin: 0">
                    <div style="display: none" class="hint-text hidden">Showing <b>@Model.Count()</b> out of <b>@Model.PageSize</b> entries</div>
                    <ul class="pagination">
                        @for (int i = 1; i <= Model.PageCount; i++)
                        {
                            <li style=" list-style-type: none ;padding: 6px 10px; margin: 0 5px; border: none; cursor: pointer; background-color: #ccc; border-radius: 5px; ">
                                <a style="text-decoration: none; color: black"  href="@Url.Action("Product", "Product", new { page = i})" class="page-link">@i</a>
                            </li>
                        }
                    </ul>
                </div>

            </section>
        </main>
    </div>
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            var paginationLinks = document.querySelectorAll('.pagination a');

            paginationLinks.forEach(function (link) {
                link.addEventListener('click', function () {
                    paginationLinks.forEach(function (item) {
                        item.classList.remove('active');
                    });
                    this.classList.add('active');
                });
            });
        });
    </script>

 
</body>
</html>
