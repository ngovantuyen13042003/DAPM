@model DAPM.Models.TbChitietMucDoThietHai

@{
    ViewData["Title"] = "Thêm Thiệt Hại Mới";
    //Layout = "~/Views/Shared/_Layout.cshtml";
    Layout = null;
}
<link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
<style>
    .container {
        margin-top: 50px;
    }
    h2{
        display: flex;
        justify-content:center;
    }
</style>

<div class="container">
    <h2>@ViewData["Title"]</h2>
    <hr />

    <form asp-action="Create" method="post">
        @Html.AntiForgeryToken()

        <div class="form-group">
            <label asp-for="IdMucDo">Mức Thiệt Hại</label>
            <select asp-for="IdMucDo" asp-items="ViewBag.IdMucDo" class="form-control"></select>
            <span asp-validation-for="IdMucDo" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="IdTaiKhoan">Hộ gia đình</label>
            <select asp-for="IdTaiKhoan" asp-items="ViewBag.IdTaiKhoan" class="form-control"></select>
            <span asp-validation-for="IdTaiKhoan" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="IdDotLu">Đợt Lũ</label>
            <select asp-for="IdDotLu" asp-items="ViewBag.IdDotLu" class="form-control"></select>
            <span asp-validation-for="IdDotLu" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Mota">Mô Tả</label>
            <textarea asp-for="Mota" class="form-control"></textarea>
            <span asp-validation-for="Mota" class="text-danger"></span>
        </div>

        <div>
            <button type="submit" class="btn btn-primary">Thêm</button>
            <a asp-action="Index" class="btn btn-secondary">Hủy</a>
        </div>
    </form>
</div>
