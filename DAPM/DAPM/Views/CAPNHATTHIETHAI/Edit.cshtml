@model DAPM.Models.TbChitietMucDoThietHai

@{
    ViewData["Title"] = "Cập nhật chi tiết mức độ thiệt hại";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form asp-action="Edit" method="post" >
    <div class="form-group">
        <label for="MucThietHai">Mức thiệt hại</label>
        <select asp-for="IdMucDo" asp-items="ViewBag.MucThietHai" class="form-control"></select>
    </div>
    <div class="form-group">
        <label for="TenDangNhap">Tên đăng nhập</label>
        <select asp-for="IdTaiKhoan" asp-items="ViewBag.TenDangNhap" class="form-control"></select>
    </div>
    <div class="form-group">
        <label for="TenDotLu">Tên đợt lũ</label>
        <select asp-for="IdDotLu" asp-items="ViewBag.TenDotLu" class="form-control"></select>
    </div>
    <div class="form-group">
        <label for="MoTa">Mô tả</label>
        <textarea asp-for="Mota" class="form-control"></textarea>
    </div>
    <button type="submit" class="btn btn-primary">Lưu</button>
    <a asp-action="Index" class="btn btn-secondary">Đóng</a>
</form>