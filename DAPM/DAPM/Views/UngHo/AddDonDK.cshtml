

@model Tuple<List<DAPM.Models.TbDanhMuc>, List<DAPM.Models.TbDotLu>>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Cập Nhật Hàng Phân Bổ Cứu Trợ</title>
    <link rel="stylesheet" href="~/css/AddDonDK.css">
</head>
<body>
    <div class="container">
        <h2>CẬP NHẬT HÀNG PHÂN BỔ CỨU TRỢ</h2>
        <form id="reliefForm" method="post" action="/UngHo/AddDonDK">

            <div class="form-group">
                <label for="dotlu">Đợt lũ</label>
                <select name="idDotLu">
                    @foreach (var item in Model.Item2)
                    {
                        <option value="@item.IdDotLu">@item.TenDotLu</option>
                    }
                </select>
            </div>

            <div class="form-group">
                <label>Tên hàng ủng hộ</label>
                <input type="text" style="width: 435.750px" name="TenHangUngho" placeholder="Nhập tên hàng ủng hộ" /> 
            </div>


            <div style="display: flex; justify-content: center">
                <button class="btn" type="submit">Lưu</button>
                <button type="button" onclick="window.location.href='/UngHo/Index'">Đóng</button>
            </div>
            
        </form>
    </div>
</body>
</html>
