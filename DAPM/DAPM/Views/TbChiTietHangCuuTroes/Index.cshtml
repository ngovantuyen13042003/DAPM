@model IEnumerable<DAPM.Models.ViewModels.TbChiTietHangCuuTroViewModel>
@{
    ViewData["Title"] = "Quản lý phân bổ hàng cứu trợ";
}

<div class="container-fluid_ct">
    <div class="row_ct">
        <!-- Sidebar -->
        <div class="col-md-2 sidebar_ct">
            <div class="sidebar-header_ct">
                <h3> <img src="~/Image/logoHuyen.jpg" alt="" class="logo_ct">HUYỆN HÒA VANG</h3>
            </div>
            <ul class="nav flex-column_ct">
                <li class="nav-item_ct">
                    <a class="nav-link_ct" href="#">
                        <img src="~/Image/TongQuan-removebg-preview.png" alt="" class="menu-icon_ct">Tổng quan
                    </a>
                </li>
                <li class="nav-item_ct">
                    <a class="nav-link_ct" href="#">
                        <img src="~/Image/DMHangHoa-removebg-preview.png" alt="" class="menu-icon_ct">Danh mục hàng hóa
                    </a>
                </li>
                <li class="nav-item_ct">
                    <a class="nav-link_ct" href="#">
                        <img src="~/Image/QlyDotLu-removebg-preview.png" alt="" class="menu-icon_ct">Quản lý đợt lũ
                    </a>
                </li>
                <li class="nav-item_ct">
                    <a class="nav-link_ct" href="#">
                        <img src="~/Image/QLyThietHai-removebg-preview.png" alt="" class="menu-icon_ct">Quản lý thiệt hại
                    </a>
                </li>
                <li class="nav-item_ct">
                    <a class="nav-link_ct" href="#">
                        <img src="~/Image/QLyUngHo-removebg-preview.png" alt="" class="menu-icon_ct">Quản lý ủng hộ
                    </a>
                </li>
                <li class="nav-item dropdown_ct">
                    <a class="nav-link_ct dropdown-toggle_ct" href="#" id="qlCuuTroDropdown_ct" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        <img src="~/Image/QLyCuuTro-removebg-preview.png" alt="" class="menu-icon_ct">Quản lý đợt cứu trợ
                    </a>
                    <ul class="dropdown-menu_ct" aria-labelledby="qlCuuTroDropdown_ct">
                        <li><a class="dropdown-item_ct" href="@Url.Action("Index", "tbDotCuuTroes")">Danh sách đợt cứu trợ</a></li>
                        <li><a class="dropdown-item_ct active_ct" href="#">Phân bổ cứu trợ</a></li>
                    </ul>
                </li>
                <li class="nav-item_ct">
                    <a class="nav-link_ct" href="#">
                        <img src="~/Image/QlyTaiKhoan-removebg-preview.png" alt="" class="menu-icon_ct">Quản lý tài khoản
                    </a>
                </li>
                <li class="nav-item_ct">
                    <a class="nav-link_ct" href="#">
                        <img src="~/Image/TKe-removebg-preview.png" alt="" class="menu-icon_ct">Thống kê & báo cáo
                    </a>
                </li>
            </ul>
        </div>
        <!-- Main content -->
        <div class="col-md-10 main-content_ct">
            <div class="row_ct header_ct align-items-center_ct">
                <div class="col-md-4_ct">
                    <h3 style="font-size:15px; text-align:center">Quản lý phân bổ hàng cứu trợ</h3>
                </div>
                <div class="col-md-4_ct">
                    <input type="text" class="form-control_ct" placeholder="Search">
                </div>
                <div class="col-md-4_ct d-flex justify-content-end_ct align-items-center_ct">
                    <span class="admin-text_ct"><img src="~/Image/admin-icon.jpg" alt="" class="admin-icon_ct"> Admin</span>
                    <img src="~/Image/notification_icon.jpg" alt="Notifications" class="notification-icon_ct">
                    <img src="~/Image/settings_icon.jpg" alt="Settings" class="settings-icon_ct">
                </div>
            </div>
            <div class="justify-content-between_ct align-items-center_ct mb-3">
                <h2 class="h2_ct">CHI TIẾT PHÂN BỔ HÀNG CỨU TRỢ</h2>
                <a href="@Url.Action("Create")" class="btn btn-primary_ct">Thêm</a>
            </div>
            <div class="table-responsive_ct">
                <table class="table table-striped table-centered_ct table_ct">
                    <thead>
                        <tr>
                            <th>STT</th>
                            <th>Tên đợt lũ</th>
                            <th>Tên đợt cứu trợ</th>
                            <th>Mức thiệt hại</th>
                            <th>Tài khoản</th>
                            <th>Hàng hóa cứu trợ</th>
                            <th>Số lượng</th>
                            <th>Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            int stt = 1; // Khởi tạo biến số thứ tự
                        }
                        @foreach (var item in Model)
                        {
                            <tr data-href="@Url.Action("Details", new { idTaiKhoan = item.IdTaiKhoan, idDotCuuTro = item.IdDotCuuTro, idHangHoa = item.IdHangHoa })" class="clickable-row_ct">
                                <td>@stt</td>
                                <td>@Html.DisplayFor(modelItem => item.TenDotLu)</td>
                                <td>@Html.DisplayFor(modelItem => item.TenDotCuuTro)</td>
                                <td>@Html.DisplayFor(modelItem => item.TenMucDoThietHai)</td>
                                <td>@Html.DisplayFor(modelItem => item.TenTaiKhoan)</td>
                                <td>@Html.DisplayFor(modelItem => item.TenHangHoa)</td>
                                <td>@Html.DisplayFor(modelItem => item.SoLuong)</td>
                                <td>
                                    <a href="@Url.Action("Edit", new { idTaiKhoan = item.IdTaiKhoan, idDotCuuTro = item.IdDotCuuTro, idHangHoa = item.IdHangHoa })"><img src="~/Image/edit_icon.jpg" alt="Edit"></a> |
                                    <a href="@Url.Action("Delete", new { idTaiKhoan=item.IdTaiKhoan,idDotCuuTro= item.IdDotCuuTro, idHangHoa=item.IdHangHoa })"><img src="~/Image/delete_icon.jpg" alt="Delete"></a>
                                </td>
                            </tr>
                            stt++; // Tăng số thứ tự sau mỗi dòng
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<style>
    h3 {
        font-size: 14px;
        color: #0057BE;
    }

    .container-fluid_ct {
        padding: 0;
    }

    .row_ct {
        display: flex;
    }

    .sidebar_ct {
        position: fixed;
        top: 0;
        bottom: 0;
        left: 0;
        background-color: white;
        padding: 10px;
        width: 20%;
    }

    .sidebar-header_ct {
        text-align: left;
        padding: 3px 0;
        font-size: 1.25rem;
        font-weight: bold;
    }

    .nav_ct {
        padding-left: 0;
        list-style: none;
    }

    .main-content_ct {
        padding: 20px;
        width: 80%;
        margin-left: 20%; /* Đảm bảo nội dung chính không bị che bởi menu */
    }

    .nav-item_ct {
        margin-bottom: 5px;
    }

    .nav-link_ct {
        display: flex;
        align-items: center;
        padding: 10px;
        background-color: white;
        color: #333;
        border-radius: 5px;
        text-decoration: none;
        transition: background-color 0.3s;
        text-align: left;
    }

        .nav-link_ct:hover {
            background-color: lightgray;
        }

        .nav-link_ct.active_ct {
            font-weight: bold;
            color: black;
            background-color: #d1ecf1;
        }

    .dropdown-item_ct.active_ct {
        font-weight: bold;
        color: black;
        background-color: #d1ecf1;
    }

    .menu-icon_ct {
        margin-right: 10px;
        height: 20px;
        width: 20px;
    }

    a:hover img {
        opacity: 0.7;
    }

    img {
        height: 15px;
        width: 15px;
    }

    .logo_ct {
        margin-right: 10px;
        height: 40px;
        width: 40px;
    }

    .btn-primary_ct {
        background-color: #98E0FF;
        color: black;
        border: solid 1px black;
        width: 80px;
        height: 30px;
        text-decoration: none;
        display: flex;
        align-items: center;
        justify-content: center;
        border-radius: 5px;
        font-size: 14px;
        text-align: center;
        transition: background-color 0.3s;
        margin-left: 80%;
    }

        .btn-primary_ct:hover {
            background-color: #007bff;
            color: white;
        }

    .table-centered_ct {
        margin: 0 auto;
        text-align: center;
        width: 90%;
    }

    .table-responsive_ct {
        min-height: calc(100vh - 40px); /* 40px là tổng chiều cao của header và footer */
    }

    table.table_ct {
        width: 100%;
    }

        table.table_ct th,
        table.table_ct td {
            text-align: center;
            vertical-align: middle;
            height: 30px;
            font-size: 12px; /* Decrease table text size */
        }

    .clickable-row_ct {
        cursor: pointer;
    }

    .table-centered_ct tbody tr {
        border-bottom: 1px solid #dee2e6;
    }

        .table-centered_ct tbody tr:nth-child(odd) {
            background-color: #f8f9fa;
        }

        .table-centered_ct tbody tr:nth-child(even) {
            background-color: #ffffff;
        }

    .dropdown-menu_ct {
        display: none;
        padding: 0;
        margin: 0;
        list-style: none;
    }

    .dropdown-item_ct {
        padding: 10px 20px;
        background-color: white;
        color: #333;
        text-decoration: none;
        display: block;
        transition: background-color 0.3s;
    }

        .dropdown-item_ct:hover {
            background-color: lightgray;
        }

    .dropdown-toggle_ct::after {
        content: "";
        border-top: .3em solid;
        border-right: .3em solid transparent;
        border-bottom: 0;
        border-left: .3em solid transparent;
        margin-left: .5em;
        display: inline-block;
    }

    .dropdown-menu_ct.show_ct {
        display: block;
    }

    .dropdown-submenu_ct {
        display: none;
    }

        .dropdown-submenu_ct.show_ct {
            display: block;
        }

    .header_ct {
        background-color: white;
        padding: 10px 20px;
        border-bottom: 1px solid #dee2e6;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .form-control_ct {
        width: 100%;
        margin-left: 50px;
    }

    .admin-icon_ct {
        margin-right: 15px;
    }

    .notification-icon_ct,
    .settings-icon_ct {
        width: 24px;
        height: 24px;
        margin-left: 15px;
        cursor: pointer;
    }

    .col-md-4_ct {
        margin-left: 30px;
    }

    .admin-icon_ct {
        height: 30px;
        width: 30px;
    }

    .admin-text_ct {
        font-weight: bold;
    }

    .h2_ct {
        font-size: 14px;
        text-align: center;
        margin-top: 20px;
    }

    .justify-content-between_ct {
        display: inline-block;
        width: 100%;
    }
</style>
<script>
    document.addEventListener("DOMContentLoaded", function () {
        var dropdowns_ct = document.querySelectorAll('.dropdown-toggle_ct');
        dropdowns_ct.forEach(function (dropdown_ct) {
            dropdown_ct.addEventListener('click', function (event) {
                event.preventDefault();
                var nextEl_ct = dropdown_ct.nextElementSibling;
                if (nextEl_ct && nextEl_ct.classList.contains('dropdown-menu_ct')) {
                    nextEl_ct.classList.toggle('show_ct');
                }
            });
        });

        var rows_ct = document.querySelectorAll(".clickable-row_ct");
        rows_ct.forEach(function (row_ct) {
            row_ct.addEventListener("click", function () {
                window.location = this.dataset.href;
            });
        });

        var currentUrl_ct = window.location.href;
        if (currentUrl_ct.includes("/tbDotCuus")) {
            document.getElementById("qlCuuTroDropdown_ct").classList.add("active_ct");
            var dropdownMenu_ct = document.getElementById("qlCuuTroDropdown_ct").nextElementSibling;
            if (dropdownMenu_ct) {
                dropdownMenu_ct.classList.add("show_ct");
                var dropdownItems_ct = dropdownMenu_ct.querySelectorAll(".dropdown-item_ct");
                dropdownItems_ct.forEach(function (item_ct) {
                    if (item_ct.href === currentUrl_ct) {
                        item_ct.classList.add("active_ct");
                    }
                });
            }
        }
    });
</script>